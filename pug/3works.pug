mixin featuredWorks (number)
    ul(class=`works-list`)
        - for (var i=0;i<+number;i++)
            li(class=`works-item`)
                a.works__link(href=`${i}.html`)

section#works.section_gray
    .section-width-holder_padding-bottom
        .section-name-holder
            h1.section__title
                span featured
                span works
            p.section__text Lorem ipsum dolor sit amet consectet ur adipiscing elit  Vestibulum bibend um vestibulum.
        +featuredWorks('9')

        