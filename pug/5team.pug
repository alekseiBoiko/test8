mixin teamList (list = [])
    ul(class=`team-list`)
        each i in list
            li(class=`team-item`)
                .team-item-img-holder 
                .team-item-info_short
                    h2.team-item__name #{i.name}
                    .team-item__position #{i.position}
                .team-item-info
                    ul.team-item-skills-list 
                        li.team-item-skill UI/UX  Design 
                        li.team-item-skill English
                        li.team-item-skill Communication
                    .team-item-info_short
                        h2.team-item__name #{i.name}
                        .team-item__position #{i.position}
                    ul.team-item-socials-list
                        li.team-item-socials-item   
                            a(href=`twitter.com/${i.twitter}` class='team-item-socials-link')
                                i.fab.fa-twitter
                        li.team-item-socials-item   
                            a(href=`facebook.com/${i.facebook}` class='team-item-socials-link')
                                i.fab.fa-facebook-f 
                        li.team-item-socials-item   
                            a(href=`twitter.com/${i.twitter}` class='team-item-socials-link')
                                i.fab.fa-twitter

